{
  "manifest_version": 2,

  "name": "Play/Pause",
  "description": "Play and Pause media without opening that tab.",
  "version": "1.0",

  "permissions": [
    "tabs", "*://*/*"
  ],
  "browser_action": {
    "default_icon": {
		"19": "images/icon19.png",
		"38": "images/icon38.png"
	},
	"default_title": "Play/Pause"
  },
  
  "background": {
    "scripts": ["background.js"]
  }
}